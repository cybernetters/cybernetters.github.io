  <script>
    function saveAnswer() {
      const selected = document.querySelector('input[name="q2"]:checked');
      if (!selected) {
        alert("Please select an answer!");
        return;
      }
      localStorage.setItem('q2', selected.value);
      window.location.href = 'q3.html';
    }
  </script>
